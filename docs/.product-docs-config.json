{
  "projectName": "Saltify",
  "outDir": "docs/product-docs",
  "include": [
    "src/**/*.{ts,tsx,js,jsx}",
    "apps/**/*.{ts,tsx}",
    "migrations/**/*.{sql}",
    "supabase/**/*.{sql,ts}"
  ],
  "pageGlobs": [
    "src/app/**/page.tsx",
    "src/pages/**/*.{ts,tsx,js,jsx}"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/.next/**",
    "**/dist/**",
    "**/*.test.*",
    "**/*.spec.*",
    "**/.storybook/**",
    "**/.vercel/**",
    "**/.husky/**",
    "**/.git/**",
    "**/.env*"
  ],
  "frontendHints": [
    "Next.js App Router",
    "UI components (shadcn, Tailwind)",
    "FormBuilder, Settings, LeftNavigationBar"
  ],
  "backendHints": [
    "NestJS controllers, services, auth"
  ],
  "dataHints": [
    "Supabase schema, tenants, submissions"
  ],
  "limits": {
    "maxFilesTotal": 300,
    "maxBytesPerFile": 60000,
    "maxPages": 80,
    "maxFrontendSamples": 40,
    "maxBackendSamples": 40,
    "maxDataSamples": 30
  }
}
